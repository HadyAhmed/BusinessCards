<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.CardInformationFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Card Name"
                android:textAppearance="?android:textAppearanceLarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardName">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imagePreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/front_00"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/cardPreviewLayout"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@id/imagePreview"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="8dp">

                            <TextView
                                android:id="@+id/cardNameHolderTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_bold"
                                android:textAppearance="?android:textAppearanceLarge"
                                android:textColor="@android:color/white"
                                tools:text="Hadi Ahmed" />

                            <TextView
                                android:id="@+id/occupationTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:fontFamily="@font/raleway_medium"
                                android:textColor="@android:color/white"
                                tools:text="Android Developer" />

                            <TextView
                                android:id="@+id/phoneNumberTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:textColor="@android:color/white"
                                tools:text="+201000652173" />

                            <TextView
                                android:id="@+id/emailTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:textColor="@android:color/white"
                                tools:text="h.a7med2017@gmail.com" />

                            <TextView
                                android:id="@+id/addressTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:textColor="@android:color/white"
                                tools:text="Cairo, Egypt" />

                            <TextView
                                android:id="@+id/websiteTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                tools:text="www.example.com" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/companyLogo"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:scaleType="centerCrop"
                                tools:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/sloganTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/companyLogo"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:textAppearance="?android:textAppearanceMedium"
                                tools:text="Entertainment Company" />
                        </RelativeLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <GridLayout
                android:id="@+id/cardInputInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/materialCardPreview">

                <TextView
                    android:layout_row="0"
                    android:layout_column="0"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Card Name"
                    android:textAppearance="?android:textAppearanceMedium" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginStart="8dp"
                    android:hint="name of the card">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cardNameEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName|textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_row="1"
                    android:layout_column="0"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Your Name"
                    android:textAppearance="?android:textAppearanceMedium" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginStart="8dp"
                    android:hint="card name holder">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cardNameHolderEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName|textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_row="2"
                    android:layout_column="0"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Occupation"
                    android:textAppearance="?android:textAppearanceMedium" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginStart="8dp"
                    android:hint="ex: Android Developer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/occupationEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_row="3"
                    android:layout_column="0"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Phone Number"
                    android:textAppearance="?android:textAppearanceMedium" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_marginStart="8dp"
                    android:hint="ex: +201123456789">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneNumberEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_row="4"
                    android:layout_column="0"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Email"
                    android:textAppearance="?android:textAppearanceMedium" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_marginStart="8dp"
                    android:hint="one@domain.com">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_row="5"
                    android:layout_column="0"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Address"
                    android:textAppearance="?android:textAppearanceMedium" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_marginStart="8dp"
                    android:hint="cairo, Egy">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addressEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_row="6"
                    android:layout_column="0"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Web Site"
                    android:textAppearance="?android:textAppearanceMedium" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:layout_marginStart="8dp"
                    android:hint="http://www.domain.com">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/webSiteEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_row="7"
                    android:layout_column="0"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Slogan"
                    android:textAppearance="?android:textAppearanceMedium" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="250dp"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:layout_marginStart="8dp"
                    android:hint="ex: development company">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/sloganEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_row="8"
                    android:layout_column="0"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Pick up Logo"
                    android:textAppearance="?android:textAppearanceMedium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pickUpImageBtn"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_row="8"
                    android:layout_column="1"
                    android:text="Pick up Image" />
            </GridLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextBtn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Continue"
                app:cornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardInputInfoLayout" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
